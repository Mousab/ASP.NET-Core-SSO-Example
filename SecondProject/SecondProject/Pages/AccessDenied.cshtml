@page
@model SecondProject.Pages.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="text-center">
        <h1 class="display-4 text-danger">Access Denied</h1>
        <p class="lead">You don’t have permission to access this page.</p>
        <hr class="my-4">
        <p class="text-muted">If you believe this is a mistake, please contact your administrator.</p>
        <a asp-page="/Index" class="btn btn-primary btn-lg mt-3">
            <i class="bi bi-house-door-fill"></i> Return to Home
        </a>
        <a href="mailto:support@example.com" class="btn btn-secondary btn-lg mt-3">
            <i class="bi bi-envelope-fill"></i> Contact Support
        </a>
    </div>
</div>
